[core]
    autocrlf = true
    editor = vi
    pager = less -FRSX
    logallrefupdates = true
    attributesfile = ~/.config/git/attributes
    excludesfile = ~/.config/git/ignore
    filemode = false

[init]
    defaultBranch = main

[branch]
    autosetuprebase = always
    autosetupmerge = true

[help]
    autocorrect = 1

[color]
    ui = true

[http]

[https]
    sslVerify = true

[alias]

[commit]
    #gpgsign = true
    verbose = true

[filter "tabspace"]
    clean = unexpand --tabs=4 --first-only
    smudge = expand --tabs=4 --initial

[merge]
    renormalize = true
    conflictstyle = diff3
    keepbackup = false

[diff]
    algorithm = histogram
    submodule = log

[transfer]
    fsckobjects = true

[fetch]
    fsckobjects = true
    prune = true
    prunetags = true

[receive]
    fsckobjects = true

[status]
    submoduleSummary = true

[submodule]
    recurse = true

[gpg]
    format = ssh

[log]
    date = rfc
    decorate = full
    showroot = true
    mailmap = true

[push]
    default = simple

