## safety
case "$(uname)" in
    [Aa][Ii][Xx])
        alias rm="rm -i";
        alias mv="mv -i";
        alias cp="cp -i";
        alias ln="ln -i";
        ;;
    *)
        alias rm="rm -i --preserve-root";
        alias chown="chown --preserve-root";
        alias chmod="chmod --preserve-root";
        alias chgrp="chgrp --preserve-root";
        alias mv="mv -i";
        alias cp="cp -i";
        alias ln="ln -i";
        ;;
esac
